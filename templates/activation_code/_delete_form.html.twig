<form method="post" action="{{ path('activation_code_delete', {'id': activation_code.id}) }}" onsubmit="return confirm('Wollen Sie den Aktivierungscode wirklich löschen');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activation_code.id) }}">
    <button class="btn red">löschen</button>
</form>
