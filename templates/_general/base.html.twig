<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %} | ASSPICK Kundenportal</title>

    <script src="https://kit.fontawesome.com/0b3d3e05d9.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&display=swap" rel="stylesheet">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

    {% block messages %}
        {% for label, messages in app.flashes %}
            <div class="wrap-messages">
                {% for message in messages %}
                    <div class="message {{ label }}">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% endblock %}

    {% include '_general/topbar.html.twig' %}

    <div id="wrapper">
        {% block content %}{% endblock %}
    </div>

    {% include '_general/footer.html.twig' %}

    {% block dropzones %}{% endblock %}

    {% block fancyboxes %}{% endblock %}

    <div class="loading-indicator-modal">
        <i class="fas fa-spinner"></i>
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
