<div id="topbar">
	<div class="title">
		<a href="{{ path('dashboard') }}">
			{# <img src="{{ asset('build/Logo.svg') }}" alt="Asspick Kundenportal" /> #}
			<h1>ASSPICK Kundenportal</h1>
		</a>
	</div>

	{% if app.user %}
		<div class="navigation-wrapper">
			<nav>
				<span><i class="fad fa-user"></i> {{ app.user.username }}</span>
				<a href="{{ path('logout') }}"><i class="fad fa-sign-out-alt"></i></a>
			</nav>

			<nav>
				<a href="{{ path('files') }}"{% if app.request.get('_route') == 'files' %} class="active"{% endif %}>
					<i class="fad fa-cloud"></i>
					Ihre Vertr√§ge
				</a>

				{% if is_granted('ROLE_ADMIN') %}
					<div class="submenu-wrapper">
						<h2{{ app.request.get('_route') in downloadCenterRoutes ? ' class="active"' }}>
							<i class="fas fa-cloud-download"></i>
							Download-Center
						</h2>
						<div class="submenu">
							<a
									href="{{ path('download_center_folder_index') }}"
							>
								<i class="fad fa-user-alt"></i>
								Benutzer-Ansicht
							</a>
							<a
									href="{{ path('download_center_folder_index') }}"
							>
								<i class="fad fa-tools"></i>
								Administration
							</a>
						</div>
					</div>
				{% else %}
					<a href="{{ path('files') }}"{% if app.request.get('_route') == 'files' %} class="active"{% endif %}>
						<i class="fas fa-cloud-download"></i>
						Download-Center
					</a>
				{% endif %}

				<div class="submenu-wrapper">
					<h2>
						<i class="fad fa-fragile"></i>
						Angebotsrechner
					</h2>
					<div class="submenu">
						<a
								href="https://rechner.asspick.netzhirsch.de/aci"
								target="_blank"
						>
							<i class="fad fa-house-damage"></i>
							Immobilien Cover
						</a>
						<a
								href="https://rechner.asspick.netzhirsch.de/unfall"
								target="_blank"
						>
							<i class="fad fa-car-crash"></i>
							Unfall Cover
						</a>
					</div>
				</div>
				<a href="{{ path('news_index') }}"{% if app.request.get('_route') == 'news_index' %} class="active"{% endif %}>
					<i class="fad fa-paper-plane"></i>
					Newsroom
				</a>
				<div class="submenu-wrapper">
					<h2{{ app.request.get('_route') in damageCaseRoutes ? ' class="active"' }}>
						<i class="fad fa-fragile"></i>
						Schadenmeldung
					</h2>
					<div class="submenu">
						<a
								href="{{ path('damageCase_liability_index') }}"
								{% if app.request.get('_route')
									== 'damageCase_liability_index' %} class="active"
								{% endif %}
						>
							<i class="fad fa-fragile"></i>
							Haftpflicht
						</a>
						<a
								href="{{ path('damageCase_car_index') }}"
								{% if app.request.get('_route')
									== 'damageCase_car_index' %} class="active"
								{% endif %}
						>
							<i class="fad fa-car-tilt"></i>
							Schadenanzeige KFZ
						</a>
						<a
								href="{{ path('damageCase_generalDamage_index') }}"
								{% if app.request.get('_route')
									== 'damageCase_generalDamage_index' %} class="active"
								{% endif %}
						>
							<i class="fad fa-money-check-edit"></i>
							Schadenanzeige SACH
						</a>
					</div>
				</div>
				{% if is_granted('ROLE_ADMIN') %}
					<div class="submenu-wrapper">
						<h2{{ app.request.get('_route') in userRoutes ? ' class="active"' }}>
							<i class="fad fa-user-alt"></i>
							Benutzerverwaltung
						</h2>
						<div class="submenu">
							<a href="{{ path('user_index') }}"{% if app.request.get('_route') == 'user_index' %} class="active"{% endif %}>
								<i class="fad fa-user-alt"></i>
								Benutzer
							</a>
							<a
									href="{{ path('activation_code_index') }}"
									{% if app.request.get('_route') == 'activation_code_index' %} class="active"{% endif %}
							>
								<i class="fad fa-barcode"></i>
								Aktivierungscode
							</a>
						</div>
					</div>
				{% endif %}
			</nav>
		</div>
	{% endif %}

</div>
