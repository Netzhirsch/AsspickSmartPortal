{% extends '_general/base.html.twig' %}

{% block title %}Einloggen{% endblock %}

{% block content %}
<div class="container container--login">
    <div class="inner">
        <header>
            <h2>
                <i class="fad fa-sign-in-alt"></i>
                Registrieren
            </h2>
        </header>
    {{ form_start(registrationForm) }}
        <div class="content">
            <div class="line col-24">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="newline"></div>
            <div class="line col-24">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword)}}
                {{ form_errors(registrationForm.plainPassword)}}
            </div>
            <div class="line col-24">
                {{ form_label(registrationForm.code) }}
                {{ form_widget(registrationForm.code) }}
                {{ form_errors(registrationForm.code ) }}
            </div>
            <div class="liner"></div>
            <div class="line col-24 wrap-checkboxes col-auto">
                {{ form_widget(registrationForm.termsOfUse) }}
                {% set terms_link %}<a title="Nutzungsbedingungen" href="{{ path('nutzungsbedingungen') }}" target="_blank">Nutzungsbedingungen</a>{% endset %}
                {{ form_label(registrationForm.termsOfUse)|trans({ '%nutzungsbedingungen_link%': terms_link })|raw }}
                {{ form_errors(registrationForm.termsOfUse ) }}
            </div>
            <div class="newline"></div>
            {{ form_widget(registrationForm.register) }}
            {{ form_label(registrationForm.register) }}
        </div>
        {{ form_row(registrationForm._token) }}
        {{ form_end(registrationForm,{'render_rest':false}) }}
    </div>
</div>
{% endblock %}
