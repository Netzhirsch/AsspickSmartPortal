{% extends '_general/base.html.twig' %}

{% block title %}Download-Center Administration{% endblock %}

{% block content %}
    <div class="container">
        <div class="inner">
            <header>
                <h2>Download-Center Administration</h2>
            </header>
            <div class="content">
                <div class="table-wrapper">
                    <table class="entity-list">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Letzte Ã„nderung</th>
                            <th class="actions">
                                <a title="Ordner erstellen" class="btn green" href="{{ path('download_center_folder_new') }}">
                                    Neuer Ordner
                                </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set levelClass = 'level-' %}
                        {% for folder in folders %}
                            {% include 'download_center/folder/_child.html.twig' with {'folder':folder,'level':0}%}
                        {% else %}
                            <tr>
                                <td colspan="3">Keine Ordner im System</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
