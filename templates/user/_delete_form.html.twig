<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Wollen Sie den folgenden Benutzer wirklich löschen? {{ user.username }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn red">Löschen</button>
</form>
