{% extends '_general/base.html.twig' %}

{% block title %}Haftpflicht{% endblock %}

{% block content %}
    <div class="container container--dashboard">
        <div class="inner">
            <header>
                <h2>Haftpflicht</h2>
            </header>
            <div class="content">
                <i class="fa fa-pdf"></i>
                <a
                        href="{{ path('damageCase_liability_download') }}"
                        title="PDF"
                        target="_blank"
                >
                    Schadenanzeige_HAFTPFLICHT
                </a>
            </div>
            <div class="content">
                <div class="table-wrapper">
                    <table>
                        <thead>
                        <tr>
                            <th>Versicherer</th>
                            <th>Versicherungs-Nr/Schaden-Nr</th>
                            <th>Versicherungsnehmer</th>
                            <th>Schadentag</th>
                            <th class="actions">
                                <a href="{{ path('damageCase_liability_new') }}" class="btn green">
                                    Neues Formular ausfüllen
                                </a>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for liability in liabilities %}
                                <tr>
                                    <td>{{ liability.insured.insured }}</td>
                                    {% set insuranceNumber = liability.insured.insuranceNumber %}
                                    <td>{{ liability.policyholder }}</td>
                                    <td>{{ (insuranceNumber?insuranceNumber:liability.insured.dangerNumber) }}</td>
                                    <td>{{ liability.damageEvent.date|date("d.m.Y") }}</td>
                                    <td class="actions">
                                        {% include 'damage_case/liability/_delete.html.twig' %}
                                        <a
                                            href="{{ path('damageCase_liability_edit',{'id':liability.id})}}"
                                            class="btn edit"
                                        >
                                            bearbeiten
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="4">Keine Einträge im System</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
