            {{ form_label(payment.transferTo) }}
            {{ form_widget(payment.transferTo) }}
            {{ form_errors(payment.transferTo) }}
        </div>
        <div class="newline"></div>
    {% endif %}
    <div class="line col-8">
        {{ form_label(payment.bank) }}
        {{ form_widget(payment.bank) }}
        {{ form_errors(payment.bank) }}
    </div>
    <div class="line col-8">
        {{ form_label(payment.location) }}
