    </div>
    <div class="line col-8">
        {{ form_label(payment.bic) }}
        {{ form_widget(payment.bic) }}
        {{ form_errors(payment.bic) }}
    </div>
    <div class="line col-8">
        {{ form_label(payment.accountHolder) }}
