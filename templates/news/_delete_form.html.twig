<form method="post" action="{{ path('news_delete', {'id': news.id}) }}" onsubmit="return confirm('Wollen Sie die News mit dem Titel {{ news.titel }} wirklich löschen?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
    <button class="btn red">löschen</button>
</form>
