{% extends '_general/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}
    {{ form_start(requestForm) }}
        <div class="container container--dashboard">
            <div class="inner">
                <header>
                    <h2>
                        Ihr Passwort zurücksetzen
                    </h2>
                </header>
                <div class="content">
                    <div class="line col-6">
                        {{ form_row(requestForm.email) }}
                    </div>
                    <div class="line col-24">
                        <small>
                            Geben Sie Ihre E-Mail-Adresse ein und wir senden Ihnen einen
                            Link, um Ihr Passwort zurückzusetzen.
                        </small>
                    </div>

                    <button class="btn btn-primary">E-Mail zum Zurücksetzen des Kennworts senden</button>
                </div>
            </div>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
